{
  "name": "skillrise-backend",
  "version": "1.0.0",
  "description": "SkillRise Platform Backend API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node scripts/test-runner.js",
    "test:unit": "jest --testPathPattern=tests/.*\\.test\\.js --testPathIgnorePatterns=tests/integration tests/e2e tests/performance tests/security",
    "test:unit:ci": "jest --testPathPattern=tests/.*\\.test\\.js --testPathIgnorePatterns=tests/integration tests/e2e tests/performance tests/security --coverage --ci --watchAll=false",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:integration:ci": "jest --testPathPattern=tests/integration --ci --watchAll=false --forceExit",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "test:e2e:ci": "jest --testPathPattern=tests/e2e --ci --watchAll=false --forceExit --testTimeout=30000",
    "test:security": "jest --testPathPattern=tests/security",
    "test:security:ci": "jest --testPathPattern=tests/security --ci --watchAll=false",
    "test:performance": "jest --testPathPattern=tests/performance",
    "test:performance:ci": "jest --testPathPattern=tests/performance --ci --watchAll=false --testTimeout=60000",
    "test:coverage": "jest --coverage --testPathIgnorePatterns=tests/e2e tests/performance",
    "test:watch": "jest --watch",
    "test:all": "node scripts/test-runner.js --performance",
    "lint": "eslint . --ext .js --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .js --ignore-path .gitignore --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "audit:security": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix",
    "create-admin": "node scripts/create-admin.js",
    "test-connection": "node scripts/test-connection.js",
    "check-admin": "node scripts/check-admin.js",
    "fix-admin": "node scripts/fix-admin.js"
  },
  "keywords": [
    "skillrise",
    "education",
    "freelance",
    "mentorship",
    "api"
  ],
  "author": "SkillRise Team",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "chalk": "^4.1.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-junit": "^16.0.0",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "puppeteer": "^24.15.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
